@model OnlineShope.Models.UserRegistration
@{
    Layout = null;
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Online Shope Login</title>
    <link href="~/vendors/mdi/css/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/vendors/base/vendor.bundle.base.css" rel="stylesheet" />
    <link href="~/vendors/css/style.css" rel="stylesheet" />
    <!-- endinject -->
    <link rel="shortcut icon" href="~/vendors/images/favicon.png" />
</head>
<body>
    <div class="container-scroller"id="LoginDetails">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <form class="pt-3" asp-action="Login" asp-controller="Accounts" method="post">
                                <div class="brand-logo">
                                    <img src="~/vendors/images/onlineshope.JPG" alt="logo" style="width:100%;height:100px">
                                </div>

                                <div class=" alert-dismissible text-danger" role="alert">
                                    @TempData["invalidUser"]
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="UserName" class="col-form-label"><b>User Name</b></label>
                                    <input class="form-control form-control-lg" asp-for="UserName" placeholder="Username">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="col-form-label"><b>Password</b></label>
                                    <input type="password" class="form-control form-control-lg" asp-for="Password" placeholder="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN IN</button>
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">
                                            Keep me signed in
                                        </label>
                                    </div>
                                    <a href="#" class="auth-link text-black">Forgot password?</a>
                                </div>
                                <div class="mb-2">
                                    <a class="" href="~/Accounts/RegisterUser">
                                        <button type="button" class="btn btn-block btn-facebook auth-form-btn" id="RegisterUser" onclick="ViewUserDetails();">
                                            <i class="mdi mdi-radar mr-2"></i>Register New User
                                        </button>
                                    </a>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/vendors/base/vendor.bundle.base.js"></script>
    <script src="~/vendors/js/off-canvas.js"></script>
    <script src="~/vendors/js/hoverable-collapse.js"></script>
    <script src="~/vendors/js/template.js"></script>
</body>
